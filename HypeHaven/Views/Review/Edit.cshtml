@using HypeHaven.ViewModels.ReviewViewModels


@model EditReviewViewModel
@if (User.Identity.IsAuthenticated)
{
    <h3>Edit a Review</h3>
    <form method="post">
        <input type="hidden" id="Id" name="Id" asp-for="@Model.Id" />
        <input type="hidden" id="ProductId" name="ProductId" asp-for="@Model.ProductId" />
        <input type="hidden" id="BrandId" name="BrandId" asp-for="@Model.BrandId" />

        <div class="form-group">
            <label for="rating">Rating:</label>
            <select name="rating" class="form-control" asp-for="@Model.Rating" required>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="text">Review Text:</label>
            <textarea name="text" class="form-control" asp-for="@Model.Text" required maxlength="100"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </form>
}

