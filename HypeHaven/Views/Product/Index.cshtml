@using HypeHaven.ViewModels.ProductViewModels
@model ProductViewModel

<h1>Products</h1>
@* Search and Filter Form *@
<form asp-controller="Product" asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchTerm">Search Products:</label>
        <input type="text" name="searchTerm" class="form-control" placeholder="Search Products..." value="@Model.SearchTerm">
    </div>
    <div class="form-group">
        <label for="priceSortOrder">Sort by Price:</label>
        <select id="priceSortOrder" name="priceSortOrder" class="form-control">
            <option value="">Default</option>
            <option value="Price">Price (Low to High)</option>
            <option value="price_desc">Price (High to Low)</option>
            <option value="date_added_desc">Date Added (Newest First)</option>
        </select>
    </div>
    <div class="form-group">
        <label for="categoryFilter">Filter by Category:</label>
        <select id="categoryFilter" name="categoryFilter" class="form-control">
            <option value="">All categories</option>
            <!-- Add options for available categories from your database -->
            @foreach (var category in Model.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search and Filter</button>
</form>
<!--view(value sortOrder passed to controller than using method from repo values in switch)-->
@*Displaying products*@
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                @foreach (var item in Model.Products)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.Image" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">@item.Name</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                        <form asp-controller="CartItem" asp-action="AddToCart" method="post">
                                            <input type="hidden" asp-for="@item.ProductId" name="productId" />
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <input type="submit" value="Add to Cart" class="btn btn-primary" />
                                            }
                                            else
                                            {
                                                <p>Please log in to add this product to your cart.</p>
                                            }
                                        </form>

                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            if (item.IsFavorite)
                                            {
                                                <form asp-controller="Product" asp-action="RemoveFromFavorites" method="post">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit" class="btn btn-success btn-sm">Remove from fav</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-controller="Product" asp-action="AddToFavorites" method="post">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit" class="btn btn-outline-secondary btn-sm">Add to fav</button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>