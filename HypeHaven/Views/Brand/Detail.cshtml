                <li>@Model.Email</li>
                <li>@Model.PhoneNumber</li>
                <li>@Model.Instagram</li>
                <li>@Model.Facebook</li>
                <li>@Model.Pinterest</li>
                <li>@Model.Tiktok</li>
                <li>@Model.Video</li>
            </ul>
        </div>

    </div>
