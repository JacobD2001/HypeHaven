@using HypeHaven.models
@model IEnumerable<Brand>

<div class="album py-5 bg-light">
    <h1>Brands</h1>
    @*Search bar for searching brands*@
    <form action="@Url.Action("Search", "Brand")" method="get">
        <input type="text" name="searchTerm" placeholder="Search Brands...">
        <button type="submit">Search</button>
    </form>
    @*Displaying brands*@
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
                                    <div class="col-md-4">
                                        <div class="card mb-4 box-shadow">
                                            <img class="card-img-top" src="@item.Image" height="225" alt="Card image cap">
                                            <div class="card-body">
                                                <p class="card-text">@item.Name</p>
                                                <p class="card-text">@item.Description</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group">
                                                        <a type="btn btn-success" asp-controller="Brand" asp-action="Detail" asp-route-id="@item.BrandId" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
        }
    }

        </div>
    </div>
</div>